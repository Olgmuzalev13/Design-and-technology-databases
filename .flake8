[flake8]
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    static,
    media
    env,
    build,
    my_django_project.egg-info,

per-file-ignores =
    __init__.py: F401
    tests/*: S101
    */migrations/*: E501
max-complexity = 10
max-line-length = 100